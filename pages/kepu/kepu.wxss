/* pages/kepu/kepu.wxss */

.datas-show{
  background-color: #ffffff;
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  justify-items: center;
  align-items: center;
}
.goods-item{
  margin: 10rpx;
}
.goods-img{
  width: 350rpx;
  height: 220rpx;
}
.goods-title{
  width: 300rpx;
  margin-top: 10rpx;
  font-size: 25rpx;
  z-index:-1;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.goods-author{
  margin-top: 10rpx;
  font-size: 20rpx;
}
